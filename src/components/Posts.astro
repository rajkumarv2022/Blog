---

import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props={
    posts:CollectionEntry<'posts'>;
};

const {posts}=Astro.props;

---

<article>

    <a href={`/blog/${posts.slug}`}>
        <Image src={posts.data.image} width={600} height={600/1.5} alt={posts.data.title} class="rounded-2xl shadow-xl mb-4 aspect-thumbnail object-cover"/>
    </a>
    <a href={`/blog/${posts.slug}`} class="text-4xl text-zinc-900 font-semibold inline-block"> <h1>{posts.data.title}</h1> </a>
    

    <p class="text-zinc-500 text-2xl line-clamp-2">{posts.body}</p>

</article>