---
import Header from '../components/Header.astro'
import { ViewTransitions } from 'astro:transitions';

interface Props{
	title:string,
	description?:string,
	image?:string;
};

const {title,description="Welcome to music page",image="/favicon.svg"}=Astro.props;

---

<html>

	<head>
		<meta charset="UTF-8">
		<meta name="description" content={description}>
		<meta name="viewport" content="width=device-width">
		<link rel="icon" type="image/scg+xml" href="favicon.svg">
		<meta name="genarator" content={Astro.generator}>
		<meta property="og:image" content={image}/>
		
		<ViewTransitions/>

		<title>{title}</title>
	</head>

	<body>
		<Header/>
		<slot />
	</body>

</html>